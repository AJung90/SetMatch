<%= form_for(:session, url: login_path) do |f| %>
  <% if @alert %>
    <h3><%= @alert %></h3>
  <% end %>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.submit "login" %>
  </p>
<% end %>
