<%= render 'layouts/header' %>

<div class="registration">
	<h1>Create profile</h1>
	<%= form_for @user, html: { multipart: true } do |f| %>
		<% if @user.errors.any? %>
			<h3><%= pluralize(@user.errors.count, "error") %> prevented this post from saving!</h3>
			<% @user.errors.full_messages.each do |error| %>
				<p><%= error %></p>
			<% end %>
		<% end %>

		<div class="avatar">
			<div class="image"></div>
			<div class="upload">
				<%= f.file_field :image %>
			</div>
		</div>

		<div class="form-fields">
			<div class="top">
				<%= f.label "full name" %>
				<%= f.text_field :fullname, required: "required" %>
			</div>

			<div class="top">
				<%= f.label :email %>
				<%= f.email_field :email, required: "required" %>
			</div>

			<div class="top">
				<%= f.label :password %>
				<%= f.text_field :password, required: "required"  %>
			</div>

			<div class="top">
				<%= f.label :screen_name %>
				<%= f.text_field :screen_name %>
			</div>

			<div class="bio">
				<%= f.label :bio %>
				<%= f.text_area :bio %>
			</div>

			<div class="rating">
				<%= f.label :rating %>
				<%= f.text_field :rating %>
			</div>

			<div class="zipcode">
				<%= f.label :zipcode %>
				<%= f.text_field :zipcode, required: "required"  %>
			</div>

			<div class="age">
				<%= f.label :age %>
				<%= f.text_field :age %>
			</div>

			<div class="gender">
				<%= f.label :gender %>
				<%= radio_button_tag(:gender, "Female") %>
				<%= radio_button_tag(:gender, "Male") %>
				<%= radio_button_tag(:gender, "Other") %>
				<!-- <%= select_tag(:gender, options_for_select([['Male'], ['Female'], ['Other']], selected: :option )) %> -->
			</div>

			<div class="left">
				<%= f.label :handed %>
				<%= f.text_field :handed%>
			</div>

			<div class="actions">
				<%= f.submit 'Create account'%>
			</div>
		</div>
	<% end %>
</div>
