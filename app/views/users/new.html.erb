<%= render 'layouts/header' %>

<h1>Create an account with us!</h1>
<div class="row">
	<%= form_for @user, url: {action: 'create'} do |f| %>
		<% if @user.errors.any? %>
			<h3><%= pluralize(@user.errors.count, "error") %> prevented this post from saving!</h3>
			<% @user.errors.full_messages.each do |error| %>
				<p><%= error %></p>
			<% end %>
		<% end %>

		<div class="row">
			<div class="col-sm-8 inline-form col-sm-offset-2">
				<div class="col-xs-6 form-group">
					<%= f.label :fullname %>
					<%= f.text_field :fullname, class: "form-control" %>
				</div>

				<div class="col-xs-6">
					<%= f.label :email %>
					<%= f.email_field :email, class: "form-control" %>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-8 inline-form col-sm-offset-2">
				<div class="col-xs-6 form-group">
					<%= f.label :password %>
					<%= f.text_field :password, class: "form-control" %>
				</div>

				<div class="col-xs-6">
					<%= f.label :screen_name %>
					<%= f.text_field :screen_name, class: "form-control" %>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-8 inline-form col-sm-offset-2">
				<div class="col-xs-6">
					<%= f.label :bio %>
					<%= f.text_field :bio, class: "form-control", row: 3 %>
				</div>

				<div class="col-xs-6 form-group">
					<%= f.label :rating %>
					<%= f.text_field :rating, class: "form-control" %>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-8 inline-form col-sm-offset-2">
				<div class="col-xs-6">
					<%= f.label :zipcode %>
					<%= f.text_field :zipcode, class: "form-control" %>
				</div>

				<div class="col-xs-6 form-group">
					<%= f.label :age %>
					<%= f.text_field :age, class: "form-control" %>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-8 inline-form col-sm-offset-2">
				<div class="col-xs-6">
					<%= f.label :gender %>
					<%= f.text_field :gender, class: "form-control" %>
				</div>

				<div class="col-xs-6">
					<%= f.label :handed %>
					<%= f.text_field :handed, class: "form-control" %>
				</div>
			</div>
		</div>

		<div class="form-group">
	    <div class="col-sm-offset-2 col-sm-10">
				<%= f.submit 'Create account', class: "btn btn-primary" %>
	    </div>
	  </div>
	<% end %>
</div>
