<header id="welcome-page">
  <div class="welcome-logo">
    <%= link_to "", root_path, class: "logo" %>
  </div>
  <div id="navbar">
    <nav class="welcome-page">
      <ul>
        <% if logged_in? %>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Create a match", new_post_path %></li>
          <li><%= link_to "Find a match", posts_path %></li>
          <li><%= link_to "Account", "#", 'arial-label': 'aria-haspopup=true' %>
            <ul>
              <li><%= link_to "Profile", user_path(current_user) %></li>
              <li><%= link_to "Settings", "#" %></li>
              <li><%= link_to 'Logout', logout_path %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Create a match", new_post_path %></li>
          <li><%= link_to "Find a match", posts_path %></li>
          <li><%= link_to "Login", new_session_path %></li>
          <li><%= link_to "Register", new_user_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
<section class="main">
  <div class="welcome-h1">
    <h1>Find your perfect match</h1>
  </div>
  <div class="get-started">
    <%= link_to "Get Started", new_post_path, class: "btn" %>
  </div>
</section>
