<header id="index-page">
  <div>
    <span><%= link_to "", root_path, class: "logo" %></span>
    <nav class="index-page">
      <ul>
        <% if logged_in? %>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Create a match", new_post_path %></li>
          <li><%= link_to "Find a match", posts_path %></li>
          <li><%= link_to "Account", "#", 'arial-label': 'aria-haspopup=true' %>
            <ul>
              <li><%= link_to "Profile", user_path(current_user) %></li>
              <li><%= link_to "Settings", "#" %></li>
              <li><%= link_to 'Logout', logout_path %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Create a match", new_post_path %></li>
          <li><%= link_to "Find a match", posts_path %></li>
          <li><%= link_to "Login", new_session_path %></li>
          <li><%= link_to "Register", new_user_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
<section class="main">
  <h1>Find your perfect match</h1>
  <div>
    <%= link_to "Get Started", new_post_path, class: "btn" %>
  </div>
</section>
