<header id="index-page">
  <div class="container">
    <span><%= link_to "", root_path, class: "logo" %></span>
    <nav class="index-page">
      <ul>
        <% if logged_in? %>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Create a match", new_post_path %></li>
          <li><%= link_to "Find a match", "#" %></li>
          <li><%= link_to "Account", "#" %>
            <ul>
              <li><%= link_to "Profile", "#" %></li>
              <li><%= link_to "Settings", "#" %></li>
              <li><%= link_to 'Log out', logout_path %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign in", new_session_path %></li>
          <li><%= link_to "Sign up", new_user_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
<section class="main">
  <div>
    <%= link_to "Get Started", new_post_path, class: "btn" %>
  </div>
</section>
